{
	"manifest_version": 2,
	"name": "Grade Calc",
	"description": "A quick and simple grade calculator for professors",
	"version": "1.0.0",
	"version_name": "1.0.0 stable",
	"minimum_chrome_version": "23",
	"offline_enabled": true,
	"kiosk_enabled" : true,
	"permissions":
		["fullscreen", "storage"],
	"icons": {
		"128": "img/icon128.png",
		"48": "img/icon48.png",
		"16": "img/icon16.png"
	},
	"app": {
		"background": {
			"scripts": ["background.js"]
		}
	}
}